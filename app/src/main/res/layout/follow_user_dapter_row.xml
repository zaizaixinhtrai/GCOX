<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:background="#222222"
                android:orientation="horizontal"
                android:paddingBottom="7dp"
                android:paddingStart="7dp"
                android:paddingEnd="10dp"
                android:paddingTop="7dp">

    <FrameLayout
            android:id="@+id/userImage_fl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:background="@drawable/newfeed_imv_user_background">

        <com.gcox.fansmeet.customview.CircleImageView
                android:id="@+id/imv_user_image"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

    </FrameLayout>

    <LinearLayout android:layout_width="wrap_content"
                  android:orientation="vertical"
                  android:layout_centerInParent="true"
                  android:layout_marginStart="4dp"
                  android:layout_marginEnd="3dp"
                  android:layout_toStartOf="@+id/btn_follow"
                  android:layout_toEndOf="@+id/userImage_fl"
                  android:layout_height="wrap_content">
        <com.gcox.fansmeet.customview.CustomFontTextView
                android:id="@+id/tvDisplayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#ffffff"
                tools:text="long Namefdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdf"
                android:textSize="11sp"
                android:textDirection="locale"
                app:appFont="@string/font_opensansemibold"/>
        <com.gcox.fansmeet.customview.CustomFontTextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#278BED"
                tools:text="long Namefdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdfdf"
                android:textSize="11sp"
                android:textDirection="locale"
                app:appFont="@string/font_opensansemibold"/>
    </LinearLayout>

    <com.gcox.fansmeet.customview.CustomFontTextView
            android:id="@+id/btn_follow"
            android:layout_width="75dp"
            android:layout_height="27dp"
            android:textSize="10sp"
            android:layout_alignParentEnd="true"
            android:textAllCaps="true"
            app:appFont="@string/font_opensansbold"
            android:layout_centerInParent="true"
            android:gravity="center"/>

</RelativeLayout>