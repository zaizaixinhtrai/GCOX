<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.gcox.fansmeet.util.view.PagerSlidingTabStrip
        android:id="@+id/tabsNotify"
        android:layout_width="match_parent"
        android:layout_height="@dimen/category_tapbar_height"
        android:background="@color/background_tabtrip"
        app:layout_collapseMode="pin"
        app:tab_count="2" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pagerNotify"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabsNotify" />
</RelativeLayout>

