<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools"
              android:background="@color/white"
              android:orientation="horizontal"
              android:paddingBottom="5dp"
              android:paddingLeft="20dp"
              android:paddingRight="20dp"
              android:paddingTop="5dp">

    <com.gcox.fansmeet.customview.CircleImageView
            android:id="@+id/ivUserImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center" />

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_weight="9"
            android:orientation="vertical">

        <com.gcox.fansmeet.customview.CustomFontTextView
                android:id="@+id/tvDisplayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Appsters"
                android:textColor="@color/text_color_on_tapbar"
                android:textSize="13sp"
                app:appFont="@string/font_opensansbold" />

        <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="\@Appstersgfgfgfgff"
                android:textColor="@color/grey_text_color"
                android:textSize="13sp" />
    </LinearLayout>

    <Button
            android:id="@+id/btnUnblock"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:padding="0dp"
            android:gravity="center"
            style="?android:borderlessButtonStyle"
            android:background="@drawable/btn_unblock_background"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:text="@string/string_unblock"/>
</LinearLayout>