<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/media_image_fl"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#E8E8E8">

    <com.gcox.fansmeet.customview.SquareImageView
        android:id="@+id/mediaImage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop" />

    <com.gcox.fansmeet.customview.CustomFontTextView
        android:id="@+id/tvChallenge"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/user_profile_challenge_btn"
        android:gravity="center"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="@string/gid_challenge_button"
        android:textColor="#FFFFFF"
        android:textSize="9sp"
        android:visibility="invisible"
        app:appFont="@string/font_opensansemibold"
        tools:visibility="visible" />

</FrameLayout>