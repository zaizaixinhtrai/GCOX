<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

    <com.gcox.fansmeet.customview.SquareImageView
            android:id="@+id/blurImage"
            android:scaleType="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <com.gcox.fansmeet.customview.SquareImageView
            android:scaleType="centerCrop"
            android:background="@drawable/bg_black25_gradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <com.gcox.fansmeet.customview.SquareLinearLayout
            android:id="@+id/llTop"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <com.gcox.fansmeet.customview.CircleImageView
                android:id="@+id/useImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_marginBottom="15dp"
        />

        <com.gcox.fansmeet.customview.CustomFontTextView
                android:id="@+id/tvStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textSize="12sp"
                android:layout_below="@+id/llTop"
                android:gravity="center"
                android:drawableStart="@drawable/icon_star"
                android:drawablePadding="4dp"
                app:drawable_start_height="10dp"
                app:drawable_start_width="10dp"
                android:maxLines="1"
                android:text="123,456"
                app:appFont="@string/font_opensanssemibold"/>

    </com.gcox.fansmeet.customview.SquareLinearLayout>

    <View
            android:id="@+id/blackView"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_below="@+id/llTop"
            android:layout_height="10dp"/>

</RelativeLayout>