<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
            style="@style/NotificationTabLayout"
            android:id="@+id/tabsNotify"
            android:layout_width="match_parent"
            android:layout_height="@dimen/category_tapbar_height"
            app:layout_collapseMode="pin"
            android:background="@color/bottom_bar_color"
            app:tabTextColor="#FFFFFF"
            app:tabSelectedTextColor="#278BED"
            app:tabIndicatorColor="#278BED"
            app:tab_count="3" />

    <android.support.v4.view.ViewPager
            android:id="@+id/pagerNotify"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tabsNotify" />
</RelativeLayout>
