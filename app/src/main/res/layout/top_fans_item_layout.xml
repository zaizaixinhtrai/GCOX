<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:id="@+id/topFansLayout"
                                             android:background="@color/color_151515"
                                             android:paddingEnd="@dimen/profile_padding_right"
                                             android:paddingStart="@dimen/profile_padding_left"
                                             android:layout_height="wrap_content">

    <com.gcox.fansmeet.customview.CustomFontTextView
            android:id="@+id/tvTopFans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/color_2587E7"
            android:textSize="16sp"
            android:gravity="center"
            android:text="@string/toppan_title"
            app:appFont="@string/font_opensanssemibold"/>

    <LinearLayout
            android:layout_marginTop="15dp"
            android:id="@+id/llUseImage1"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvTopFans"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="vertical"
            android:visibility="invisible"
            tools:visibility="visible"
            android:layout_height="wrap_content">

        <com.gcox.fansmeet.customview.CircleImageView
                android:id="@+id/useImage1"
                android:layout_width="@dimen/profile_top_fans_user_image"
                android:layout_height="@dimen/profile_top_fans_user_image"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle_profile_gradient"
                android:src="@drawable/ic_topfan1"/>

        <com.gcox.fansmeet.customview.CustomFontTextView
                android:id="@+id/userName1"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:maxWidth="@dimen/profile_top_fans_user_image"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                tools:text="BrianH"
                android:textColor="@color/color_9c9c9c"
                android:textSize="12sp"
                app:appFont="@string/font_opensanssemibold"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/llUseImage2"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvTopFans"
            android:layout_marginStart="15dp"
            app:layout_constraintLeft_toRightOf="@+id/llUseImage1"
            android:visibility="invisible"
            tools:visibility="visible"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <com.gcox.fansmeet.customview.CircleImageView
                android:id="@+id/useImage2"
                android:layout_width="@dimen/profile_top_fans_user_image"
                android:layout_height="@dimen/profile_top_fans_user_image"
                app:layout_constraintTop_toBottomOf="@+id/tvTopFans"
                android:background="@drawable/bg_circle_profile_gradient"
                app:layout_constraintLeft_toRightOf="@+id/llUseImage1"
                android:src="@drawable/ic_topfan2"/>

        <com.gcox.fansmeet.customview.CustomFontTextView
                android:id="@+id/userName2"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_marginTop="3dp"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:maxWidth="@dimen/profile_top_fans_user_image"
                android:layout_height="wrap_content"
                tools:text="TomNic"
                android:textColor="@color/color_9c9c9c"
                android:textSize="12sp"
                app:appFont="@string/font_opensanssemibold"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/llUseImage3"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvTopFans"
            android:layout_marginStart="15dp"
            android:visibility="invisible"
            tools:visibility="visible"
            app:layout_constraintLeft_toRightOf="@+id/llUseImage2"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <com.gcox.fansmeet.customview.CircleImageView
                android:id="@+id/useImage3"
                android:layout_width="@dimen/profile_top_fans_user_image"
                android:layout_height="@dimen/profile_top_fans_user_image"
                android:background="@drawable/bg_circle_profile_gradient"
                android:src="@drawable/topfan_3"/>

        <com.gcox.fansmeet.customview.CustomFontTextView
                android:id="@+id/userName3"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxWidth="@dimen/profile_top_fans_user_image"
                android:layout_height="wrap_content"
                tools:text="Pltan"
                android:textColor="@color/color_9c9c9c"
                android:textSize="12sp"
                app:appFont="@string/font_opensanssemibold"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/llUseImage4"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvTopFans"
            android:layout_marginStart="15dp"
            app:layout_constraintLeft_toRightOf="@+id/llUseImage3"
            android:visibility="invisible"
            tools:visibility="visible"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <com.gcox.fansmeet.customview.CircleImageView
                android:id="@+id/useImage4"
                android:layout_width="@dimen/profile_top_fans_user_image"
                android:layout_height="@dimen/profile_top_fans_user_image"
                android:background="@drawable/bg_circle_profile_gradient"
                android:src="@drawable/icon_topfan4"/>

        <com.gcox.fansmeet.customview.CustomFontTextView
                android:id="@+id/userName4"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:layout_marginTop="3dp"
                android:maxWidth="@dimen/profile_top_fans_user_image"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                tools:text="IvanKid"
                android:textColor="@color/color_9c9c9c"
                android:textSize="12sp"
                app:appFont="@string/font_opensanssemibold"/>

    </LinearLayout>

    <LinearLayout android:id="@+id/viewMoreClick"
                  android:layout_marginTop="15dp"
                  android:layout_width="60dp"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:visibility="invisible"
                  tools:visibility="visible"
                  app:layout_constraintTop_toBottomOf="@+id/tvTopFans"
                  android:layout_marginStart="5dp"
                  app:layout_constraintBottom_toBottomOf="@+id/llUseImage4"
                  app:layout_constraintLeft_toRightOf="@+id/llUseImage4"
                  android:layout_height="60dp">
        <ImageView
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_more_blue"
                android:layout_height="30dp"/>

        <com.gcox.fansmeet.customview.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_2587E7"
                android:textSize="13sp"
                android:gravity="center"
                android:text="@string/topfan_more"
                app:appFont="@string/font_opensanssemibold"/>
    </LinearLayout>

    <com.gcox.fansmeet.customview.CustomFontTextView
            android:id="@+id/txtEmpty"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:visibility="gone"
            tools:visibility="visible"
            android:gravity="center"
            tools:text="@string/topfan_empty_text"
            app:appFont="@string/font_opensanssemibold"/>

    <View
            android:id="@+id/rowView"
            android:layout_width="match_parent"
            android:background="@color/separate_feed_color"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llUseImage4"
            android:layout_height="0.5dp"/>

</android.support.constraint.ConstraintLayout>