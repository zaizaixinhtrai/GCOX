<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="#0A1E39"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/bgProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:scaleType="centerCrop" />

    <com.gcox.fansmeet.customview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="97dp"
        android:layout_height="97dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/user_image_default" />

    <com.gcox.fansmeet.customview.CustomFontTextView
        android:id="@+id/display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Guest"
        android:textColor="@color/white"
        android:textDirection="locale"
        android:textSize="14sp"
        android:textStyle="bold"
        app:appFont="@string/font_opensansemibold" />

    <com.gcox.fansmeet.customview.CustomFontTextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display_name"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="guest"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:appFont="@string/font_opensansemibold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:visibility="gone">

        <com.gcox.fansmeet.customview.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:text="@string/silder_menu_balance"
            android:textColor="#7a7a7a"
            android:textSize="10sp"
            app:appFont="@string/font_opensansemibold" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/icon_gift_price" />

        <com.gcox.fansmeet.customview.CustomFontTextView
            android:id="@+id/totalStars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|right"
            android:text="0"
            android:textColor="#58585b"
            android:textSize="14sp"
            app:appFont="@string/font_opensansemibold" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="7dp"
             />

        <com.gcox.fansmeet.customview.CustomFontTextView
            android:id="@+id/txt_bean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="0"
            android:textColor="#58585b"
            android:textSize="14sp"
            app:appFont="@string/font_opensansemibold" />

    </LinearLayout>
</RelativeLayout>
