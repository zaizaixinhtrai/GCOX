<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Login" parent="AppTheme">

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">#0000</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="header_title" parent="header_text_color">
        <item name="android:textSize">@dimen/text_size_header_title</item>
        <item name="android:maxLines">1</item>
        <!--<item name="android:maxLength">25</item>-->
        <item name="appFont">@string/font_opensansbold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>